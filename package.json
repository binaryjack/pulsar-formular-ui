{
  "name": "@pulsar-framework/formular-ui",
  "version": "0.1.0-alpha",
  "description": "Form components library for Pulsar framework using formular.dev",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "dev": "vite",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6007",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "pulsar",
    "formular",
    "forms",
    "ui",
    "components",
    "react",
    "typescript",
    "tailwind"
  ],
  "dependencies": {
    "@pulsar-framework/core": "workspace:*",
    "@pulsar-framework/ui": "workspace:*",
    "@pulsar-framework/design-tokens": "workspace:^",
    "formular.dev.lib": "workspace:*"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "8.6.14",
    "@storybook/addon-interactions": "8.6.14",
    "@storybook/addon-links": "8.6.14",
    "@storybook/blocks": "8.6.14",
    "@storybook/html": "8.6.14",
    "@storybook/html-vite": "8.6.14",
    "@storybook/test": "8.6.14",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "storybook": "8.6.14",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9.3"
  },
  "author": "Tadeo Piana <https://www.linkedin.com/in/tadeopiana/>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/binaryjack/pulsar-formular-ui.git"
  },
  "homepage": "https://github.com/binaryjack/pulsar-formular-ui#readme",
  "bugs": {
    "url": "https://github.com/binaryjack/pulsar-formular-ui/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
