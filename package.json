{
  "name": "@pulsar-framework/formular-ui",
  "version": "0.1.0-alpha",
  "description": "Enterprise-grade form components for Pulsar framework integrated with formular.dev",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "echo 'Formular-ui build skipped'",
    "build:isolated": "tsc --project tsconfig.build.json",
    "dev": "vite --port 3000",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "keywords": [
    "pulsar",
    "formular",
    "forms",
    "ui",
    "components",
    "react",
    "typescript",
    "tailwind"
  ],
  "dependencies": {
    "@pulsar-framework/pulsar.dev": "workspace:*",
    "@pulsar-framework/design-tokens": "workspace:^",
    "@pulsar-framework/ui": "workspace:*",
    "@pulsar-framework/formular.dev": "workspace:*"
  },
  "devDependencies": {
    "@pulsar-framework/vite-plugin": "workspace:0.7.0-alpha",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "author": "Tadeo Piana <https://www.linkedin.com/in/tadeopiana/>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/binaryjack/pulsar-formular-ui.git"
  },
  "homepage": "https://github.com/binaryjack/pulsar-formular-ui#readme",
  "bugs": {
    "url": "https://github.com/binaryjack/pulsar-formular-ui/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
