{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "declaration": true,
    "declarationMap": true,
    "rootDir": "..",
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "composite": false,
    "types": ["vite/client"],
    "paths": {
      "pulsar": ["../pulsar.dev/dist/index.d.ts"],
      "pulsar/jsx-runtime": ["../pulsar.dev/dist/jsx-runtime.d.ts"],
      "pulsar/jsx-dev-runtime": ["../pulsar.dev/dist/jsx-runtime.d.ts"],
      "pulsar/context": ["../pulsar.dev/dist/context.d.ts"],
      "pulsar/hooks": ["../pulsar.dev/dist/hooks.d.ts"],
      "pulsar/reactivity": ["../pulsar.dev/dist/reactivity.d.ts"],
      "pulsar/state": ["../pulsar.dev/dist/state.d.ts"],
      "pulsar/resource": ["../pulsar.dev/dist/resource.d.ts"],
      "pulsar/portal": ["../pulsar.dev/dist/portal.d.ts"],
      "pulsar/error-boundary": ["../pulsar.dev/dist/error-boundary.d.ts"],
      "pulsar/di": ["../pulsar.dev/dist/di.d.ts"],
      "pulsar/control-flow": ["../pulsar.dev/dist/control-flow.d.ts"],
      "pulsar/env": ["../pulsar.dev/dist/env/index.d.ts"],
      "@pulsar-framework/core": ["../pulsar.dev/dist/index.d.ts"],
      "@pulsar-framework/ui": ["../pulsar-ui.dev/dist/index.d.ts"],
      "@pulsar-framework/design-tokens": ["../pulsar-design-system/dist/index.d.ts"],
      "formular.dev.lib": ["../formular.dev/dist/types/formular-dev.es.d.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.type.ts",
    "src/**/*.interface.ts",
    "src/**/*.enum.ts",
    "../pulsar.dev/pulsar.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
